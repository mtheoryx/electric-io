{
	"name": "electric-io",
	"version": "0.1.0",
	"description": "an IoT Dashboard for Azure IoT Hub",
	"author": "Suz Hinton",
	"main": "index.js",
	"scripts": {
		"build:client": "",
		"build:server": "",
		"build:all": "",
		"build:run": "",
		"start": "npm run watch",
		"watch": "npm-run-all --parallel watch:server watch:build",
		"watch:build": "webpack --progress --colors --watch",
		"watch:server": "nodemon index.js",
		"test": "jest",
		"test:watch": "jest --watchAll"
	},
	"dependencies": {
		"azure-iothub": "^1.2.5",
		"azure-iothub-receiver": "^2.0.0",
		"dotenv": "^5.0.0",
		"express": "^4.12.4",
		"socket.io": "*"
	},
	"engines": {
		"node": "8"
	},
	"keywords": [
		"node",
		"express",
		"iot"
	],
	"license": "MIT",
	"devDependencies": {
		"babel-cli": "^6.26.0",
		"babel-core": "^6.26.0",
		"babel-jest": "^22.4.3",
		"babel-loader": "^7.1.4",
		"babel-minify-webpack-plugin": "^0.3.1",
		"babel-preset-env": "^1.6.1",
		"jest": "^22.4.3",
		"nodemon": "^1.17.3",
		"npm-run-all": "^4.1.2",
		"webpack": "^4.5.0",
		"webpack-cli": "^2.0.14",
		"webpack-watch-server": "^1.2.1"
	},
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": [
			"lib/**/*.js",
			"public/js/**/*.js",
			"!public/js/{dist,vendor}/*.js"
    ],
    "roots": [
      "lib", "public/js"
    ]
	}
}
